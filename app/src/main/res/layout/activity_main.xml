<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn8"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="72dp"
        android:text="8"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DisplayOp" />

    <Button
        android:id="@+id/btnCLR"
        android:layout_width="181dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="212dp"
        android:text="CLR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="-"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMult" />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:text="*"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDiv" />

    <Button
        android:id="@+id/btnRes"
        android:layout_width="181dp"
        android:layout_height="72dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="212dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnCLR" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="28dp"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCLR"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="1"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="12dp"
        android:text="3"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="16dp"
        android:text="/"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DisplayRes" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="316dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="28dp"
        android:text="+"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:text="7"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DisplayOp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="36dp"
        android:text="6"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn9" />

    <Button
        android:id="@+id/btnNeg"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="212dp"
        android:layout_marginBottom="28dp"
        android:text="(-)"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRes"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="36dp"
        android:text="5"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="4"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <Button
        android:id="@+id/btnDec"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="28dp"
        android:text="."
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCLR"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="12dp"
        android:text="2"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn5" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="72dp"
        android:text="9"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DisplayRes" />

    <EditText
        android:id="@+id/DisplayOp"
        android:layout_width="225dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text='0'
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/DisplayRes"
        android:layout_width="139dp"
        android:layout_height="88dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text='0'
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>